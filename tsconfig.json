{
    "compilerOptions": {
        // Emit
        "importHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "outDir": "./build",
        "target": "ES2017",
        
        // Type Checking
        "noImplicitAny": false,
        
        // Language and Environment
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        // Modules
        "module": "ES2015",
        "baseUrl": ".",
        "paths": {
            "tslib": ["node_modules/tslib/tslib"],
            "lit-html": ["node_modules/lit-html/lit-html"],
            "lit-element": ["node_modules/lit-element/lit-element"]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}